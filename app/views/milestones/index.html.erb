<h1>Milestones</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Edit</th>
      <th>Delete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task.milestones.each do |milestone| %>
      <tr>
        <td><%= milestone.name %></td>
        <td><%= link_to 'Edit', edit_project_task_milestone_path(@project,@task,milestone) %></td>
        <td><%= link_to 'Destroy', project_task_milestone_path(@project,@task,milestone), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', project_tasks_path(@project) %>