<h1><%=@project.name%>Tasks</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Edit task</th>
      <th>Delete</th>
      <th>Dependency</th>
      <th>Add dependency</th>
      <th>Milestone</th>
      <th>Add Milestone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project.tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= link_to 'Edit',  edit_project_task_path(@project,task) %></td>
        <td><%= link_to 'Destroy', project_task_path(@project,task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <td><%= link_to 'Dependencies',  project_task_dependencies_path(@project,task) %></td>
         <td><%= link_to 'add_new_Dependency', new_project_task_dependency_path(@project,task) %></td>
          <td><%= link_to 'Milestones',  project_task_milestones_path(@project,task) %></td>
         <td><%= link_to 'add_new_Milestone',  new_project_task_milestone_path(@project,task) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Add task', new_project_task_path(@project)%>

