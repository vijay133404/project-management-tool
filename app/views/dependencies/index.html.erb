<h1><%=@task.name%>Dependencies</h1>

<table class="table table-hover"> 
 <thead>
    <tr>
      <th>Name</th>
      <th>Edit</th>
       <th>Delete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task.dependencies.each do |dependency| %>
      <tr>
        <td><%= dependency.name %></td>
        <td><%= link_to 'Edit', edit_project_task_dependency_path(@project,@task,dependency) %></td>
        <td><%= link_to 'Destroy', project_task_dependency_path(@project,@task,dependency), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', project_tasks_path(@project) %>

